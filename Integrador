#include <stdio.h>
#include <stdlib.h>
#include <time.h>
#include <stdbool.h>
#string <string.h>

//Constantes
const int num_digits = 5;
const int max_attempts = 10;

//Registro del jugador
typedef struct {
   char name[50]; 
   int min_attempts;
   int time;
} Player;

//Subprograma del juego
void juego();

//Subprograma del menu de inicio
void start();

//Subprograma del menu de fin de juego
void end();

//Subprograma de los record
void record();

//Funcion para comparar numeros, e indicar las cifras correctas


//Programa principal
int main() { 
srand(time(NULL)); //Generar numeros aleatorios


printf("Bienvenido a La Cifra Numerica Del Dia\n");
printf("El juego consiste en adivinar un número de %d cifras. Tienes %d intentos.\n", num_digits, max_attempts);


return 0;
}
void inicio{
   char resp[2];
   do {
      Printf("Porfavor ingrese su nombre");
      scanf("%c",name);
      printf("LA CIFRA DEL DIA \n Bienvenido %c\n El juego consiste en adivinar un número aleatorio de %d cifras. Tienes %d intentos.\n", name, num_digits, max_attempts");
      printf("REGLAS:\n -Tienes 10 intentos para adivinar el numero del dia.\n-Si ingresas un numero y alguna de las cifras es correcta y esta bien ubicada, sera marcada con un 'v'.\n-Si alguna cifra esta correcta pero mal ubicada se marcara con un '-'\n-Si el numero es incorrecto se marcara con un 'x'..");
      printf("Para inicar el juego ingrese escriba 'go'")
      scanf("%c",resp);
      if (strcmp(resp, "go") == 0){
         break;
      }
         
   } while (1);
}

