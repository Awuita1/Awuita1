#include <stdio.h>
#include <stdlib.h>
#include <time.h>
#include <stdbool.h>
#include <string.h>

//Constantes
const int num_digits = 5;
const int max_attempts = 10;

//Registro del jugador
typedef struct {
   char name[50]; 
   int min_attempts;
   int time;
} player; //cristian Para evitar confusiones al programar le saque la "P" mayuscula acordate que C distingue entre min y MAY (borrar esto en la version final)

//Subprograma del juego
void juego();

//Subprograma del menu de inicio
void start();

//Subprograma del menu de fin de juego
void end();

//Subprograma de los record
void record();

//Funcion para comparar numeros, e indicar las cifras correctas


//Programa principal
int main() { 
    //definicaion de valores
    player currentPLayer;
    srand(time(NULL)); //Generar numeros aleatorios

    //Bienvenida
    printf("Bienvenido a La Cifra Numerica Del Dia\n");
    //Pido nombre a usuario
    printf("Porfavor ingrese su nombre: \n");
    scanf("%s",currentPLayer);    

    //salto a start
    start(&currentPLayer);

    return 0;
}

void start(player *p) {
   char resp[2];
   do {
      //REGLAS
      printf("\nLA CIFRA DEL DIA \n Bienvenido %s\n El juego consiste en adivinar un nÃºmero aleatorio de %d cifras. Tienes %d intentos.\n", p->name, num_digits, max_attempts);
      printf("REGLAS:\n-Tienes 10 intentos para adivinar el numero del dia.\n-Si ingresas un numero y alguna de las cifras es correcta y esta bien ubicada, sera marcada con un 'v'.\n-Si alguna cifra esta correcta pero mal ubicada se marcara con un '-'\n-Si el numero es incorrecto se marcara con un 'x'.\n");
      printf("Para inicar el juego ingrese escriba 'go'  ");
      scanf("%s\n",resp);

      //A espera de inicio
      if (strcmp(resp, "go") == 0){
         break;
      }
         
   } while (1);
}
